name: gelato-magico

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data: {type: str, default: "data/icecream_sales.csv"}
      experiment-name: {type: str, default: "gelato-magico-experiment"}
      model-name: {type: str, default: "gelato-magico-model"}
      test-size: {type: float, default: 0.2}
      random-state: {type: int, default: 42}
      register-model: {type: bool, default: false}
    command: "python src/train.py --data {data} --experiment-name {experiment-name} --model-name {model-name} --test-size {test-size} --random-state {random-state} {register-model}"
  
  evaluate:
    parameters:
      model-name: {type: str, default: "gelato-magico-model"}
      test-data: {type: str, default: "data/test_data.csv"}
    command: "python src/evaluate.py --model-name {model-name} --test-data {test-data}"
  
  predict:
    parameters:
      model-name: {type: str, default: "gelato-magico-model"}
      input-data: {type: str, default: "data/input.json"}
    command: "python src/predict.py --model-name {model-name} --input-data {input-data}"